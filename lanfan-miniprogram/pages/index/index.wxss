/**index.wxss**/

page {
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.swiper-container{
  position: relative;
  width: 100%;
  height: 375px;
  margin-bottom: 20px;
}
.swiper-container .item-outer-name{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 30px;
  line-height: 30px;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 90%;
  font-size: 14px;
  overflow: hidden;
}
.swiper-container .swiper-item-wrapper{
  position: absolute;
  top: 0;
  left: 0;
  right: 20px;
  bottom: 30px;
  overflow: hidden;
  border-radius: 6px;
}
.swiper-container .swiper-item:last-child .swiper-item-wrapper{
  right: 0;
}
.swiper-item-wrapper .item-collect{
  position: absolute;
  right: 20px;
  bottom: 20px;
  width: 32px;
  height: 32px;
}
.swiper-item-wrapper .item-collect .item-collect-image{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 32px;
  height: 32px;
}
.swiper-item-wrapper .item-info{
  position: absolute;
  top: 20px;
  left: 20px;
  width: 80%;
  color: #fff;
}
.item-info .item-name{
  font-size: 30px;
  font-weight: bold;
}
.item-info .item-name-adj{
  font-size: 18px;
  font-weight: bold;
}
.swiper-container .slide-image{
  display: block;
  width: 100% !important;
}

.__title{
  height: 40px;
  line-height: 40px;
  font-size: 18px;
  font-weight: bold;
  width: 100%;
  padding-left: 20px;
}


/* search-bar */
.search-bar{
  display: flex;
  flex-direction: row;
  margin-bottom: 10px;
  width: 100%;
}
.search-bar .search-bar-inner{
  display: flex;
  flex-direction: row;
  flex-grow: 1;
  margin:0 20px;
}
.search-bar .search-bar-inner .search-bar-main{
  display: flex;
  flex-direction: row;
  flex-grow: 1;
  padding: 5px 15px;
  background-color: #f5f5f5;
  border-radius: 60px;
}
.search-bar .search-bar-inner .search-cancel{
  font-size: 14px;
}
.search-bar .search-bar-inner .icon{
  width: 16px;
  height: 16px;
  position: relative;
  top: 4px;
  overflow: hidden;
}
.search-bar .search-bar-inner input{
  flex-grow: 1;
  margin-left: 10px;
  font-size: 14px;
}

/* 更多美食 */
.recipe-more-list{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.recipe-more-list .recipe-item{
  position: relative;
  border-radius: 6px;
  margin-bottom: 20px;
}
.recipe-more-list .recipe-item .recipe-item-text{
  padding-top: 5px;
  font-size: 14px;
  display: inline-block;
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.recipe-more-list .recipe-item .recipe-item-image{
  border-radius: 6px;
}
.recipe-more-list .recipe-item .recipe-item-info{
  position: absolute;
  top: 20px;
  left: 20px;
  width: 80%;
  color: #fff;
}
.recipe-more-list .recipe-item .recipe-item-info .recipe-item-name-adj{
  font-size: 18px;
  font-weight: bold;
}
.recipe-more-list .recipe-item .recipe-item-info .recipe-item-name{
  font-size: 30px;
  font-weight: bold;
}
.recipe-more-list .recipe-item .recipe-item-collect{
  position: absolute;
  right: 20px;
  bottom: 50px;
  width: 32px;
  height: 32px;
}
.recipe-more-list .recipe-item .recipe-item-collect-image{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 32px;
  height: 32px;
}