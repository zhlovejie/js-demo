/* miniprogram/pages/search/search.wxss */
/* search-bar */
.search-bar{
  display: flex;
  flex-direction: row;
  margin-bottom: 10px;
  width: 100%;
  height: 35px;
  overflow: hidden;
}
.search-bar .search-bar-inner{
  display: flex;
  flex-direction: row;
  flex-grow: 1;
  margin:0 20px;
}
.search-bar .search-bar-inner .search-bar-main{
  display: flex;
  flex-direction: row;
  flex-grow: 1;
  padding: 5px 15px;
  background-color: #f5f5f5;
  border-radius: 60px;
  justify-content: center;
  align-items: center;
}
.search-bar .search-bar-inner .search-cancel{
  font-size: 14px;
  padding: 0 10px;
  align-self: center;
}
.search-bar .search-bar-inner .icon{
  width: 16px;
  height: 16px;
  position: relative;
  overflow: hidden;
  padding: 0 5px;
}
.search-bar .search-bar-inner input{
  flex-grow: 1;
  font-size: 14px;
}
.search-cancel.button-hover{
  background-color: transparent;
  color: red;
}

.search-content{
  font-size: 14px;
  margin: 10px 0;
}
.search-recommend-wrap{
  margin:0 20px;
}
.search-recommend-wrap .search-item-title{
  color: #888;
  line-height: 30px;
}
.search-recommend-wrap .search-item-wrap{
  display: flex;
  flex-wrap: wrap;
}
.search-recommend-wrap .search-item-wrap .search-item-tag{
  padding: 5px 10px;
  background-color: #f5f5f5;
  border-radius: 50px;
  margin: 0 15px 15px 0;
}

.search-result-wrap .no-result-tips{
  line-height: 60px;
  text-align: center;
}
.search-result-wrap .search-result{
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}
.search-result-wrap .search-result .search-result-item{
  border-bottom: 1rpx solid #eee;
  padding: 12px 20px;
}
.search-result-wrap .search-result .search-result-item:last-child{
  border-bottom:none;
}
